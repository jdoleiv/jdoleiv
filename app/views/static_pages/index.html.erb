      <div class="box">
        <pre>
          <code class="language-ruby">
            class Collatz
              attr_reader :cache

              def initialize
                @cache = {}
              end

              def seq(n)
                return @cache[n] if @cache[n]
                key = n
                output = []
                output &lt;&lt; n
                while n != 1 do

                  if n.even?
                    n = n / 2
                  else
                    n = n * 3 + 1
                  end
                  if @cache[n]
                      output &lt;&lt; @cache[n]
                      output.flatten!
                      break
                  end
                  output &lt;&lt; n
                end
                @cache[key] = output
                output
              end


              def longest_collatz(n)
                # this tests each number for length
                longest = 1
                key = 1
                (1...n).each do |a|
                  seq_size = seq(a).size
                  if longest &lt; seq_size
                    longest = seq_size
                    key = a
                  end
                end
                key
              end
            end

            collatz = Collatz.new
            puts collatz.seq(2)
            puts collatz.longest_collatz(12)
          </code>
