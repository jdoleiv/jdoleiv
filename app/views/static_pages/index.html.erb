            class Integer
              def recursive_fib
                if self == 0
                  0
                elsif self == 1
                  1
                else
                  (self - 2).recursive_fib + (self - 1).recursive_fib
                end        
              end
            end

            puts 35.recursive_fib

            def iterative_fib(n)
              a = 0
              b = 1
              for i in 1..n do
                a, b = b, a + b
              end
              a
            end

            puts iterative_fib(35)

            require 'benchmark'
            num = 35
            Benchmark.bm do |x|
              x.report(&quot;recursive_fib&quot;) { num.recursive_fib }
              x.report(&quot;iterative_fib&quot;)  { iterative_fib(num)  }
            end
